{
    "extends": "semistandard",
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "object-curly-spacing": ["error", "never"],
        "linebreak-style": ["error", "unix"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "arrow-parens": ["error", "as-needed"],
        "number-literal-case": "off"
    },
    "env": {
        "browser": true
    }
}
